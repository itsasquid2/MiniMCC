

on script load:
	locally suppress conflict warnings	

command /getval <string>:
	permission: op
	trigger:
		message "Value of variable %arg 1% is %{%arg 1%}%"



command /setvalnum <string> <number>:
	permission: op
	trigger:
		if {superop.%player%} is false:
			message "<pink>You do not have permission to do this!"
			exit trigger
#		else if {%arg 1%} is not a number:
#			message "%arg 1% is not a number!"
		else: 
			set {%arg 1%} to arg 2
			message "Set value of variable %arg 1% to %arg 2%"

